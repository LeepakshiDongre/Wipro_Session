using System;

public class HelloWorld
{
    // Method for division
    static double Divide(double a, double b)
    {
        if (b == 0)
        {
            Console.WriteLine("Error: Division by zero is not allowed.");
            return 0;
        }
        return a / b;
    }

    static void Main()
    {
        double num1 = 10;
        double num2 = 2;

        // Calling the Divide method
        Console.WriteLine("Division: " + Divide(num1, num2));
    }
}